{
  "app": {
    "basePath": "APP_BASE_PATH"
  },
  "server": {
    "http": {
      "enabled": "HTTP_ENABLED",
      "port": "HTTP_PORT"
    },
    "https": {
      "enabled": "HTTPS_ENABLED",
      "port": "HTTPS_PORT",
      "redirectAllHttpToHttps": "REDIRECT_HTTP_TO_HTTPS"
    },
    "trustProxy": "TRUST_PROXY"
  },
  "db": {
    "uri": "MONGO_URI"
  },
  "security": {
    "jwt": {
      "secret": "JWT_SECRET",
      "expiresIn": "JWT_EXPIRES_IN"
    },
    "cors": {
      "origins": {
        "__name": "CORS_ORIGINS",
        "__format": "json"
      }
    },
    "rateLimit": {
      "windowMs": "RATE_LIMIT_WINDOW_MS",
      "max": "RATE_LIMIT_MAX"
    }
  },
  "ssl": {
    "keyPath": "SSL_KEY_PATH",
    "certPath": "SSL_CERT_PATH"
  }
}
